{
    "include": [
        "./src/**/*"
    ],
    "compilerOptions": {
        "module": "es2020",
        "target": "es2015",
        "sourceMap": true,
        "allowJs": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true
    }
}